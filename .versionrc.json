{
  "types": [
    { "type": "feat", "section": "✨ Features" },
    { "type": "fix", "section": "🐛 Bug Fixes" },
    { "type": "chore", "section": "🔧 Chores", "hidden": false },
    { "type": "docs", "section": "📚 Documentation", "hidden": false },
    { "type": "style", "section": "💄 Styles", "hidden": false },
    { "type": "refactor", "section": "♻️ Code Refactoring", "hidden": false },
    { "type": "perf", "section": "⚡ Performance Improvements", "hidden": false },
    { "type": "test", "section": "✅ Tests", "hidden": false },
    { "type": "build", "section": "🏗️ Build System", "hidden": false },
    { "type": "ci", "section": "🔄 Continuous Integration", "hidden": false },
    { "type": "revert", "section": "⏪ Reverts", "hidden": false }
  ],
  "commitUrlFormat": "https://github.com/Walid-Azur/nextjs-boiler-app/commit/{{hash}}",
  "compareUrlFormat": "https://github.com/Walid-Azur/nextjs-boiler-app/compare/{{previousTag}}...{{currentTag}}",
  "issueUrlFormat": "https://github.com/Walid-Azur/nextjs-boiler-app/issues/{{id}}",
  "userUrlFormat": "https://github.com/{{user}}",
  "releaseCommitMessageFormat": "chore(release): 🔖 {{currentTag}}",
  "scripts": {
    "prebump": "npm run validate",
    "precommit": "git add CHANGELOG.md",
    "posttag": "echo 'Tagged release {{currentTag}}'"
  },
  "skip": {
    "changelog": false,
    "commit": false,
    "tag": false
  },
  "tagPrefix": "v",
  "header": "# Changelog\n\nAll notable changes to this project will be documented in this file. See [standard-version](https://github.com/conventional-changelog/standard-version) for commit guidelines.\n\n"
}
